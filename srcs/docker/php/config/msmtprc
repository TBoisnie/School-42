# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/camagru.crt
syslog         on

# Gmail
account        gmail
host           smtp.gmail.com
port           587
from           YOUR_GMAIL_ADDRESS
user           YOUR_GMAIL_ADDRESS
passwordeval   "echo $MSMTP_PASS"

# Set a default account
account default : gmail
